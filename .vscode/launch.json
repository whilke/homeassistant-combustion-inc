    "version": "0.2.0",
    "configurations": [
        {
            "name": "Home Assistant",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "justMyCode": true,
            "args": [
                "--debug",
                "-c",
                "config"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Home Assistant (skip pip)",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "justMyCode": true,
            "args": [
                "--debug",
                "-c",
                "config",
                "--skip-pip"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Home Assistant (verbose logging)",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "justMyCode": true,
            "args": [
                "--debug",
                "-c",
                "config",
                "-v"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        }
    ]
}